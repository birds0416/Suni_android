<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ManualFragment">


    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Day"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mon"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="MON"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tue"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="TUE"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wed"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="WED"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thu"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="THU"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fri"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="FRI"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/start_time"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:text="09:00"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mon" />

    <AutoCompleteTextView
        android:id="@+id/start_time2"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:text="10:00"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thu" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        app:layout_constraintEnd_toStartOf="@+id/start_time2"
        app:layout_constraintStart_toEndOf="@+id/start_time"
        tools:layout_editor_absoluteY="53dp" />

    <AutoCompleteTextView
        android:id="@+id/Name_required"
        android:layout_width="330dp"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_edge"
        android:text="Name(Required)"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />

    <AutoCompleteTextView
        android:id="@+id/room_optional"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="190dp"
        android:background="@drawable/button_edge"
        android:text="Instructor(Optional)"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_required" />

    <AutoCompleteTextView
        android:id="@+id/instructor_optional"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_edge"
        android:text="   Room(Optional)"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name_required" />

</androidx.constraintlayout.widget.ConstraintLayout>