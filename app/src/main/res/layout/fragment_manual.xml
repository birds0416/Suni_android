<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.schedule.ManualFragment">


    <TextView
        android:id="@+id/day_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Day"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mon_manual"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="MON"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/day_manual"
        app:layout_constraintEnd_toStartOf="@id/tue_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tue_manual"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="TUE"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/mon_manual"
        app:layout_constraintEnd_toStartOf="@id/wed_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wed_manual"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="WED"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/wed_manual"
        app:layout_constraintEnd_toStartOf="@id/thu_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thu_manual"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="THU"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/wed_manual"
        app:layout_constraintEnd_toStartOf="@id/fri_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fri_manual"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="3dp"
        android:text="FRI"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/thu_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/start_time"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:hint="09:00"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mon_manual" />

    <EditText
        android:id="@+id/end_time"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_edge"
        android:hint="10:00"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thu_manual" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        app:layout_constraintTop_toTopOf="@id/start_time"
        app:layout_constraintEnd_toStartOf="@+id/end_time"
        app:layout_constraintStart_toEndOf="@+id/start_time"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/Name_required"
        android:layout_width="360dp"
        android:layout_height="23dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:hint="Name(Required)"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/start_time"
        app:layout_constraintEnd_toEndOf="@id/end_time"
        app:layout_constraintTop_toBottomOf="@+id/start_time" />

    <EditText
        android:id="@+id/room_optional"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:hint="Instructor(Optional)"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        app:layout_constraintEnd_toEndOf="@id/Name_required"
        app:layout_constraintTop_toBottomOf="@+id/Name_required" />

    <EditText
        android:id="@+id/instructor_optional"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_edge"
        android:hint="   Room(Optional)"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="@id/Name_required"
        app:layout_constraintTop_toBottomOf="@+id/Name_required" />

</androidx.constraintlayout.widget.ConstraintLayout>