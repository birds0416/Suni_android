    <style name="Theme.Suni3" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/fontstyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="titleTextColor">@color/purple_200</item>
        <item name="actionBarStyle">@style/Theme.Suni3.ActionBar</item>
        <item name="android:popupMenuStyle">@drawable/roundcorner</item>
        <item name="android:actionMenuTextColor">@color/purple_700</item>
        <item name="actionBarItemBackground">@drawable/roundcorner</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Suni3.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/fontstyle</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/fontstyle</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

